<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tfx="http://schemas.android.com/apk/res/com.tfx.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.tfx.mobilesafe.view.TitleView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tfx:title="归属地查询" />

    <EditText
        android:id="@+id/et_phonelaction_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入要查询的号码" />

    <Button
        android:background="@drawable/dialog_button_selector"
        android:layout_width="fill_parent"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:onClick="query"
        android:text="查询归属地" />

    <TextView
        
        android:id="@+id/tv_phonelaction_result"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center" />

</LinearLayout>