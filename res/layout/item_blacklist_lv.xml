<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_item_blacklist_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/blacklist_all" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_item_blacklist_logo"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_blacklist_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13567346574"
            android:textColor="#333333"
            android:textSize="19sp" />

        <TextView
            android:layout_marginTop="-3dp"
            android:id="@+id/tv_item_blacklist_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拦截来电"
            android:textColor="#BEBEBE" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_blacklist_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/blacklist_delete_selector" />

</RelativeLayout>